<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/members.css">
        <title>Usuarios</title>
    </head>
    <body data-groupid="{{currentGroup.id}}" data-userid="{{currentUser.id}}">

        <div>
            <button id="btnBack"></button>
        </div>


        <h1>Miembros de {{currentGroup.name}}</h1>

        <ul>
            {{#users}}
                <li class="user-item" data-userid="{{id}}">
                    <div class="user-content">
                        <b>{{name}}</b>
                        <button class="btnMoreOptions" data-userid="{{id}}">
                            <img src="/img/menu.png" alt="M\u00E1s opciones">
                        </button>
                    </div>

                    <div class="modalOptions modal hidden" id="modalOptions-{{id}}">
                        <div class="modal-content">
                            <h2>{{name}}</h2>
                            <button class="btnDeleteMember" data-userid="{{id}}">Eliminar miembro</button>
                        </div>
                    </div>
                </li>
            {{/users}}
        </ul>

        <button id="btnNewItem">A\u00F1adir nuevo miembro</button>

        <div id="modalSearchUsers" class="modal hidden">
            <div class="modal-content">
                <h2>Buscar usuarios</h2>
                <label>
                    <input type="text" id="searchUserInput" placeholder="Buscar usuario..." autocomplete="off">
                </label>
                <label>
                    <ul id="userSearchResults"></ul>
                </label>
                <label>
                    <button id="btnAddSelectedUsers">A\u00F1adir seleccionados</button>
                </label>
            </div>
        </div>

        <script src="/js/authHelper.js"></script>
        <script src="/js/group_members.js" defer></script>
    </body>
</html>
